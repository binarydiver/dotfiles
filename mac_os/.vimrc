" highlighting search
set hlsearch

" Line number
set nu

" Auto indent
set autoindent
set scrolloff=2
set wildmode=longest:list,full

" Disable auto indent at paste
set paste

" Width at auto indent
set shiftwidth=2

" Show matching brace
set showmatch

set smartcase
set smarttab
set smartindent
set softtabstop=2
set tabstop=2

" Can delete forward character, line breaker in insert mode
set backspace=2

" Sytax
if has("syntax")
 syntax on
endif
